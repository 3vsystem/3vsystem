  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #007dcc), color-stop(100%, #0064a3));
  background-image: -webkit-linear-gradient(top, #007dcc, #0064a3);
  background-image: -o-linear-gradient(top, #007dcc, #0064a3);
  background-image: linear-gradient(#007dcc, #0064a3);
