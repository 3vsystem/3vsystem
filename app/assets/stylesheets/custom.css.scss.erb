$bgDefault      : #ffffff  ; 
$bgHighlight    : #23519a ;
$colDefault     : #23519a ;
$colHighlight   : #66a0ff ;

$blue1 : rgb (0, 71, 187);
$gray1 : rgb (131, 148, 184);
$purple1 : rgb (104, 71, 141);
$lightblue1 : rgb(95, 141, 218);
$darkblue1 : rgb (68, 73, 156);
.navbar-default {
	min-width: 1200px;
	font-family: "Din Round Pro";
	background-color: rgb(255, 255, 255);
	height: 70px;
	background-image: url(http://www.3v-online.ru/images/header_bg.jpg);
	background-repeat: repeat-x;
	border-bottom-color: rgb(138, 182, 198);
	border-bottom-style: solid;
	border-bottom-width: 1px;
	.logo {
		margin-top: -6px;
	}

	.pull-right, .pull-left {
		list-style: none;
		margin-left: 20px;
		margin-top: 29px;

	}

	.navbar-brand {
		color: $colDefault;
		font-size: 25px;
		&:hover, &:focus { 
			color: $colHighlight; 
			}}
	.navbar-text {
		color: $colDefault; 
	}
	.navbar-nav {
		margin-top: 10px;
		> li {
			> a {
				color: $colDefault;
				&:hover,  &:focus {
					color: $colHighlight; 
					}}
				}
		> .active {
			> a, > a:hover, > a:focus {
				color: $colHighlight;
				background-color: $bgHighlight; 
			}
			}
		> .open {
			> a, > a:hover, > a:focus {
				color: $colHighlight;
				background-color: $bgHighlight; 
				}
			}
			}
	.navbar-toggle {
		border-color: $bgHighlight;
		
		.icon-bar {
			background-color: $colDefault; 
		}
		}
	.navbar-collapse,
	.navbar-form {
		border-color: $colDefault; 
	}
	.navbar-link {
		color: $colDefault;
		&:hover {
			color: $colHighlight; 
			}}}
@media (max-width: 767px) {
	.navbar-default .navbar-nav .open .dropdown-menu {
		> li > a {
			color: $colDefault;
			&:hover, &:focus {
				color: $colHighlight; 
				}}
		> .active {
			> a, > a:hover, > a:focus, {
				color: $colHighlight;
				background-color: $bgHighlight; 
				}}}
}

