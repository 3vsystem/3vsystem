<% provide(:title, 'Контракт') %>
<div class="container">
<div class="col-md-7 showtable">
  <table class="table table-bordered table-striped">
  <tr>
    <th>Номер</th>
    <td><%= @contract.name_contract %></td>
  </tr>
  <tr>
    <th>Комментарий</th>
    <td><%= @contract.comment %></td>
  </tr>
  <tr>
    <th>Описание</th>
    <td><%= @contract.description %></td>
  </tr>
  <tr>
    <th>Дата начала</th>
    <td><%= @contract.begin_time_safe %></td>
  </tr>
  <tr>
    <th>Дата конца</th>
    <td><%= @contract.end_time_safe %></td>
  </tr>
  <tr>
    <th>Объекты</th>
    <td>
    <% @contract.buildings.each do |b| %>
      <li><%= link_to b.arrival_address, building_path(b) %> </li>
    <% end %>
    </td>
  </tr>
</table>

