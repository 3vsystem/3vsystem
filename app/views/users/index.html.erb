
<% provide(:title, @name) %>
<h1><%= @name %></h1>
<div class="pagination">
<%= will_paginate previous_label:"предыдущая", next_label:"следующая" %>
</div>
<div class="row">
<div class="col-md-4">
<table class="table">
	<tr>
	<th>Имя</th>
	</tr>
  <% @users.each do |user| %>
    <% if @name == "Клиенты"%>
    	<%= render user %>
    <% else %>
		<div class="list">
		<tr>
		  <td>
		  <%= link_to user.name, user %>
		  <div id="calendar">
		  <%= calendar_for @arrivals, :first_day_of_week => 1 do |t| %>
			<%= t.head('Пон', 'Вт', 'Ср', 'Чет', 'Пят', 'Суб', 'Воск') %>
			<%= t.day do |day, arrivals| %>
  					<%= day.day %>
			<% end %>
		  <% end %>
 		  </div>

		  <%#= user.arrivals.where(begin_or_end: 0).order(:time).last.time.strftime("%e %B %Y")%>
		  <% if current_user.admin? && !current_user?(user) %>
		    <%= link_to user, method: :delete, data: { confirm: "You sure?" } do%>
		    <span class="glyphicon glyphicon-trash" style="float:right"></span>
		    <% end %>
		  <% end %>
		  </td>
		</tr>
		</div> 
    <% end %>  
  <% end %>
</table>
</div>
</div>
<%= will_paginate previous_label:"предыдущая", next_label:"следующая" %>