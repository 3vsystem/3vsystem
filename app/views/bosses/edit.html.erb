<% provide(:title, 'Редактирование начальника') %>
<div class="container">
<div class="row">
	<div class="col-xs-4">
	</div>
	<div class="col-xs-4">
		<h1>Редактирование</h1>

		<%= form_for(@boss, :html => {:class => "form-vertical center"}) do |f| %>

		<div class="form-group">
			<label>Фамилия Имя</label>
			<%= f.text_field :name ,  class: "form-control", required: "" %>
		</div>

		<div class="form-group">
			<label>Сотовый телефон</label>
			<%= f.text_field :phone, class: "form-control phonemask", required: "" %>
		</div>
		<div class="form-group">
			<label>Район</label>
			<%= f.text_field :region, class: "form-control" %>
		</div>
		<div class="form-group">
			<label>Специализация</label>
			<%= f.text_field :specialization, class: "form-control" %>
		</div>

		<div class="form-group">
			<label>Начало отпуска</label>
			<%
			b_rest = @boss.begin_of_rest.to_date.to_formatted_s(:day_month_year) if @boss.begin_of_rest %>
			<%= date_field_tag "boss[begin_of_rest]", b_rest, class: "form-control" %>	
		</div>
		<div class="form-group">
			<label>Конец отпуска</label>
			<%
			e_rest = @boss.end_of_rest.to_date.to_formatted_s(:day_month_year) if @boss.end_of_rest %>
			<%= date_field_tag "boss[end_of_rest]", e_rest, class: "form-control" %>	
		</div>

		<br>
			<%= f.submit "Сохранить", class: "btn btn-large btn-primary " %>
		<br>
		<% end %>

	</div>
	<div class="col-md-4">
	</div>
</div>