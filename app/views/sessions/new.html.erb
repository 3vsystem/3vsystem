<% provide(:title, "Вход") %>

<div class="container">
<div class="row">
	<div class="col-md-4">
	</div>
	<div class="col-md-4">
		<h1>Вход</h1>
		<%= form_for(:session, url: sessions_path, html: {:class => "form-vertical center"}) do |f| %>
		<div class="form-group">
			<label> Почта </label>
			<%= f.text_field :email, class: "form-control", required: "" %>
		</div>
		<div class="form-group">
			<label> Пароль </label>
			<%= f.password_field :password, class: "form-control", required: "" %>
		</div>

		<div class="checkbox">
			<label>
			<%= f.check_box :not_remember_me, {}, 1%>
			Не запоминать меня
			</label>
		</div>

		<%= f.submit "Войти", class: "btn btn-large btn-primary" %>
	<% end %>

	<p><br>Нет аккаунта? <%= link_to "Зарегистрируйтесь!", signup_path %></p>
	<p><br>Забыли пароль? <%= link_to "Сбросить пароль!", reset_password_path %></p>
	</div>
	<div class="col-md-4">
	</div>
</div>