<div class="form-group">
	<label class=" col-xs-3">Контракты</label>
	<div class="col-xs-5">
		<table id="requistions" class="table table-wrapper table-bordered">
			<thead>
				<tr class = "contractSmall">
					<th>Номер договора</th>
					<th>Описание</th>
					<th>С</th>
					<th>По</th>
				</tr>
			</thead>    
		    <tbody>
				<% for contract in @list_contract %>
				<tr>
			    	<td><%= contract.name_contract %></td>
			    	<td><%= contract.description %></td>
			    	<td><%= contract.begin_time.to_formatted_s(:db)  %></td>
			    	<td><%= contract.end_time.to_formatted_s(:db)  %></td>
				</tr>
				<% end %>
			</tbody>
		</table>					
	</div>
</div>