<% provide(:title, 'All users') %>

<h1>Все заявки</h1>
<table id = "all_requistion">
	<thead>
	<tr>
		<th>Объект</th>
		<th>Главный адрес</th>
		<th>Время заявки</th>
	    <th>Статус</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
	<% for requistion in @requistions %>
	<tr>
	    <th><%= link_to requistion.object,  {:action => :show, :id => requistion.id}, {:method => :get} %></th>
		<td><%= requistion.main_address %></td>
		<td><%= Russian::strftime(requistion.created_at, "%e %B %Y %H:%M") %></td>
		<td><%= if requistion.status.blank? then 'Данных нет' else requistion.status end%></td>
	    <th><%= button_to "Изменить",  {:action => :edit, :id => requistion.id}, {:method => :get} %></th>
    </tr>
	<% end %>
	</tbody>
</table>
